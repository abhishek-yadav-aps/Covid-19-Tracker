<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RightFragment"
    android:padding="20dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_electronics"
        android:tint="@android:color/black"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="24sp"
        android:text="HELPLINE NUMBERS:"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:id="@+id/helplineTv"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_virus"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="10dp"
        android:tint="@color/dark_red"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="Covid 19"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textColor="@color/dark_red"
        android:layout_gravity="center_vertical"
        android:id="@+id/covidTv"

        android:background="@null"
        style="?android:attr/borderlessButtonStyle"
        android:shadowColor="@android:color/white"
        android:elevation="0dp"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
    <ImageView
    android:layout_width="40dp"
    android:layout_height="40dp"
        android:layout_gravity="center_vertical"
    android:src="@drawable/ic_automobile"
    android:layout_marginRight="10dp"
    android:tint="@color/dark_blue"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="Ambulance"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textColor="@color/dark_blue"
        android:layout_gravity="center_vertical"
        android:id="@+id/ambulanceTv"

        android:background="@null"
        style="?android:attr/borderlessButtonStyle"
        android:shadowColor="@android:color/white"
        android:elevation="0dp"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_miscellaneous"

        android:layout_marginRight="10dp"
        android:tint="@color/dark_green"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="Police"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textColor="@color/dark_green"
        android:layout_gravity="center_vertical"
        android:id="@+id/policeTv"
        android:background="@null"
        style="?android:attr/borderlessButtonStyle"
        android:shadowColor="@android:color/white"
        android:elevation="0dp"
        />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:textSize="24sp"
        android:text="SYMPTOMS:\n            - fever\n            - dry cough\n
           - tiredness"
        android:textStyle="bold"
        android:textColor="@color/dark_red"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center_vertical"
        android:id="@+id/symptomsTv"
        android:layout_below="@id/policeTv"/>
</LinearLayout>